<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.frmichetti.carhollics.android" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme" >
        <service android:name=".fcm.MyFirebaseMessagingService" >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".fcm.MyFirebaseInstanceIDService" >
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name=".util.ConnectivityReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".view.activity.login.LoginActivity"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.ServiceDetailActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.activity.shoppingCart.ShoppingCartActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.activity.login.ResetPasswordActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.activity.login.SignupActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.activity.OptionsActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.activity.CustomerActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.activity.VehicleCreateActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.activity.MainActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.activity.shoppingCart.ResumeCheckoutActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.activity.CheckoutDetailActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.activity.NewAddressActivity"
            android:launchMode="singleTop" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>