<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.frmichetti.carhollics.android"
    android:versionCode="9"
    android:versionName="0.1.7">


    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <service
            android:name=".fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".fcm.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>


        <activity android:name=".view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ServicoDetailActivity" />
        <activity android:name=".view.CartActivity" />
        <activity android:name=".view.ResetPasswordActivity" />
        <activity android:name=".view.SignupActivity" />
        <activity android:name=".view.OptionsActivity" />
        <activity android:name=".view.ClientActivity" />
        <activity android:name=".view.VeiculoCreateActivity" />
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.MapActivity" />
    </application>

</manifest>