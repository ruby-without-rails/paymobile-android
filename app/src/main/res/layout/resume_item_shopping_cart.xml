<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">

    <TextView
        android:id="@+id/tv_product_var"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_label"
        android:layout_centerHorizontal="true"
        android:text="Item Selecionado" />

    <TextView
        android:id="@+id/tv_quantity_var"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_quantity_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tv_quantity_label"
        android:layout_below="@+id/tv_quantity_label"
        android:text="Quantidade" />

    <TextView
        android:id="@+id/tv_price_var"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_product_var"
        android:layout_alignBottom="@+id/tv_product_var"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/tv_product_var"
        android:layout_toRightOf="@+id/tv_product_var"
        android:text="PreçoVar"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/tv_subtotal_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_subtotal_var"
        android:layout_toLeftOf="@+id/fab_remove_item_from_cart"
        android:layout_toStartOf="@+id/fab_remove_item_from_cart"
        android:text="Subtotal"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_subtotal_var"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fab_remove_item_from_cart"
        android:layout_toLeftOf="@+id/fab_remove_item_from_cart"
        android:layout_toStartOf="@+id/fab_remove_item_from_cart"
        android:text="SubtotalVar"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_total_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_subtotal_var"
        android:layout_toEndOf="@+id/fab_remove_item_from_cart"
        android:layout_toRightOf="@+id/fab_remove_item_from_cart"
        android:singleLine="false"
        android:text="Total"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_total_var"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_total_label"
        android:layout_toEndOf="@+id/fab_remove_item_from_cart"
        android:layout_toRightOf="@+id/fab_remove_item_from_cart"
        android:singleLine="true"
        android:text="TotalVar"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_product_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_product_var"
        android:layout_alignLeft="@+id/tv_product_var"
        android:layout_alignRight="@+id/tv_product_var"
        android:layout_alignStart="@+id/tv_product_var"
        android:text="Produto"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_product_var"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/tv_product_var"
        android:layout_toRightOf="@+id/tv_product_var"
        android:text="Preço"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_product_label"
        android:layout_alignBottom="@+id/tv_product_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tv_product_var"
        android:layout_toStartOf="@+id/tv_product_var"
        android:text="Quantidade"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_remove_item_from_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_var"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="19dp"
        android:elevation="4dp"
        android:src="@drawable/ic_action_remove_from_cart"
        app:backgroundTint="@color/color_primary_dark"
        app:fabSize="mini" />

</RelativeLayout>