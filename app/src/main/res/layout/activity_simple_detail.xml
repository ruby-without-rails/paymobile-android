<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.SimpleDetailActivity"
    android:background="@drawable/gradient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nome Serviço"
        android:id="@+id/textViewNome"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Descrição"
        android:id="@+id/textViewDescricao"
        android:layout_below="@+id/textViewNome"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="textViewDescricaoVar"
        android:id="@+id/textViewDescricaoVar"
        android:layout_below="@+id/textViewDescricao"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textViewDuracao" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tempo de Duração"
        android:id="@+id/textViewDuracao"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="textViewDuracaoVar"
        android:id="@+id/textViewDuracaoVar"
        android:layout_below="@+id/textViewDuracao"
        android:layout_alignEnd="@+id/textViewDescricaoVar"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Preço"
        android:id="@+id/textViewPrecoUnit"
        android:layout_alignWithParentIfMissing="false"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/buttonAddCart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="textViewPrecoUnitVar"
        android:id="@+id/textViewPrecoUnitVar"
        android:layout_below="@+id/textViewPrecoUnit"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar no Carrinho"
        android:id="@+id/buttonAddCart"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textViewDuracaoVar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
